<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta name="description" content="Blog engine using Perl/Moose/KiokuDB">
	    <meta name="author" content="Nikolay Aviltsev">
	    <!-- Le styles -->

	    %= stylesheet '/components/bootstrap/css/bootstrap.css'
		%= stylesheet '/components/bootstrap/css/bootstrap-responsive.css'
		%= stylesheet '/components/bootstrap-wysihtml5/dist/bootstrap-wysihtml5-0.0.2.css'
		%= stylesheet '/css/style.css'

	    %= stylesheet begin
	    	body { padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */ }
	    % end
	    
	    <!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js">
			</script>
	    <![endif]-->

		%= javascript '/components/jquery/jquery.min.js' 
		%#= javascript '/components/bootstrap/...'

		%= javascript '/components/wysihtml5/parser_rules/advanced.js'
		%= javascript '/components/wysihtml5/dist/wysihtml5-0.3.0.js'
		%= javascript '/components/bootstrap-wysihtml5/dist/bootstrap-wysihtml5-0.0.2.js'
	</head>

	<body>

	    <div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="/">
						KiokuBLOG
					</a>
					<ul class="nav">
						<li>
							<% if (session->{logged_in_username}) { %>
								<%= link_to "New post..." => 'post' %>
							<% } %>
						</li>
						<li>
							<% if (session->{logged_in_username}) { %>
								<%= link_to "My posts" => 'post_list' %>
							<% } %>
						</li>
						<li class="pull-right">
							<% if (session->{logged_in_username}) { %>
								<%= link_to "Logout" => 'logout' %>
							<% } else { %>
								<%= link_to "Sign in" => 'login' %>
							<% } %>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="container">
			<%= content %>
		</div>
	</body>
</html>

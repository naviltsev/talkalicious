<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <meta name="description" content="">
	    <meta name="author" content="">
	    <!-- Le styles -->

	    %= stylesheet '/css/bootstrap.css'
	    %= stylesheet begin
	    	body { padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */ }
	    % end
		%= stylesheet '/css/bootstrap-responsive.css'
	    
	    <!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js">
			</script>
	    <![endif]-->
	    <link rel="shortcut icon" src="/ico/favicon.ico">
	    <link rel="apple-touch-icon-precomposed" sizes="144x144" src="/ico/apple-touch-icon-144-precomposed.png">
	    <link rel="apple-touch-icon-precomposed" sizes="114x114" src="/ico/apple-touch-icon-114-precomposed.png">
	    <link rel="apple-touch-icon-precomposed" sizes="72x72" src="/ico/apple-touch-icon-72-precomposed.png">
	    <link rel="apple-touch-icon-precomposed" src="/ico/apple-touch-icon-57-precomposed.png">

		%= javascript 'https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js' 
		%= javascript '/js/bootstrap.js'
	</head>

	<body>

	    <div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="/">
						KiokuBLOG
					</a>
					<ul class="nav">
						<li>
							<%= link_to "New post..." => 'new_post' %>
						</li>
						<li>
							<%= link_to "My posts" => 'post_list' %>
						</li>
						<li>
							<% if (session->{logged_in_username}) { %>
								<%= link_to "Logout" => 'logout' %>
							<% } else { %>
								<%= link_to "Login" => 'login' %>
							<% } %>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="container">
			<%= content %>
		</div>
	</body>
</html>
